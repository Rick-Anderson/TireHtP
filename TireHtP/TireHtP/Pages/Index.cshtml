<h2> Axle Height vs. PSI </h2>
<h3> static lift (drop): Dynamic lift (drop)</h3>

<table class="table">

    <thead>
        <tr>
            <th>PSI</th>

            @foreach (var item in Model.Tire)
            {
                var maxHt = item.Height / 2.0;
                <th>
                    @item.Height X @item.Width
                </th>
            }
        </tr>
    </thead>

    <tbody>


        @{ double psi = Model.Tire[0].MaxPSI;
            double diff = 0;
            while (psi >= 2)
            {
                <tr>

                    <td>
                        @psi
                    </td>
                    @foreach (var item in Model.Tire)
                    {

                        <td>
                            @{
                                var staticLoad = Methods.LiftAndDiff(item.Height, item.Weight, psi, item.Width, item.WheelDiameter);
                                var dynamicLoad = Methods.LiftAndDiff(item.Height, item.Weight * 3.0, psi, item.Width, item.WheelDiameter);
                                diff = staticLoad.diff;
                            }

                            @staticLoad.lift (@staticLoad.strDiff) @dynamicLoad.lift (@dynamicLoad.strDiff)
                        </td>

                    }
                </tr>
                if (diff < .1)
                {
                    psi -= 3.0;
                }
                else
                {
                    psi -= 1.0;
                }
            }
        }
    </tbody>

</table>